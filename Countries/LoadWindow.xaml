<Window x:Class="Countries.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Countries"
        mc:Ignorable="d"
        Title="LoadWindow" Height="268.125" Width="350.938" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0">
        <StackPanel>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Countries" VerticalAlignment="Top" FontSize="32" FontFamily="Consolas" Margin="0,20,0,0"/>
        <TextBlock x:Name="tblockStatus" HorizontalAlignment="Center" Margin="0,25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        <ProgressBar x:Name="progressbar" HorizontalAlignment="Center" Height="15" Margin="0,10,0,0" VerticalAlignment="Top" Width="160"/>
        <TextBlock x:Name="tbTime" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" Height="Auto" TextAlignment="Center"/>
        <Button x:Name="btnLoad" Margin="0,0,0,0" Width="40" Height="20" Click="Load_Click" Content="Load" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</Window>
